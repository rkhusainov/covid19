<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="TextValueList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabelList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="TextTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1
        </item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ImageIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="TextCount">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
